pipeline {
    agent any

    environment {
        IMAGE_NAME = 'rani19/backend'
        TAG = "build-${env.BUILD_NUMBER}"
        DEV_REPO_URL = 'https://github.com/RaniSaed/smart-retail-dev.git'
        CONFIG_REPO_URL = 'https://github.com/RaniSaed/smart-retail-config.git'
        DOCKER_CREDENTIALS_ID = 'docker-hub-creds'
        SLACK_CREDENTIAL_ID = 'slack-webhook'
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
        timeout(time: 25, unit: 'MINUTES')
    }

    stages {
        stage('ğŸ“¥ Clone Dev Repo') {
            steps {
                dir('dev') {
                    git url: "${DEV_REPO_URL}", branch: 'main'
                }
            }
        }

        stage('ğŸ“ Clone Config Repo') {
            steps {
                dir('config') {
                    git url: "${CONFIG_REPO_URL}", branch: 'main'
                }
            }
        }

        stage('ğŸ•µï¸ Check Backend Changes') {
            steps {
                dir('dev') {
                    script {
                        def backendChanged = sh(
                            script: "git diff --name-only HEAD~1 HEAD | grep -q '^backend/'",
                            returnStatus: true
                        ) == 0

                        if (!backendChanged) {
                            echo "âš ï¸ No changes in backend code. Aborting..."
                            currentBuild.result = 'ABORTED'
                            error("No changes in backend/")
                        }
                    }
                }
            }
        }

        stage('ğŸ³ Build Docker Image') {
            steps {
                dir('dev') {
                    script {
                        echo "ğŸ“¦ Building image ${IMAGE_NAME}:${TAG}"
                        docker.build("${IMAGE_NAME}:${TAG}", "-f backend/Dockerfile backend")
                    }
                }
            }
        }

        stage('ğŸš€ Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS_ID}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    script {
                        docker.withRegistry("https://index.docker.io/v1/", "${DOCKER_CREDENTIALS_ID}") {
                            docker.image("${IMAGE_NAME}:${TAG}").push()
                            docker.image("${IMAGE_NAME}:${TAG}").push("latest")
                        }
                    }
                }
            }
        }

        stage('âœï¸ Update Deployment YAML') {
            steps {
                dir('config') {
                    script {
                        def filePath = "k8s/backend/deployment.yaml"
                        def newImage = "${IMAGE_NAME}:${TAG}"
                        echo "ğŸ”§ Updating ${filePath} with new image: ${newImage}"

                        sh """
                            sed -i 's|image:.*|image: ${newImage}|' ${filePath}
                        """
                        sh "cat ${filePath}"
                    }
                }
            }
        }

        stage('ğŸ“¤ Commit & Push Changes') {
            steps {
                dir('config') {
                    withCredentials([string(credentialsId: 'github-push-token', variable: 'GIT_TOKEN')]) {
                        script {
                            sh """
                                git config user.email "rani.saed19@gmail.com"
                                git config user.name "Rani Saed (CI/CD)"
                                git add k8s/backend/deployment.yaml

                                if ! git diff --cached --quiet; then
                                    git commit -m "ğŸš€ Update backend image to ${TAG}"
                                    git remote set-url origin https://${GIT_TOKEN}@github.com/RaniSaed/smart-retail-config.git
                                    git push origin main
                                else
                                    echo "No changes to commit"
                                fi
                            """
                        }
                    }
                }
            }
        }

                stage('ğŸ§ª Run DR Failover Test') {
            steps {
                script {
                    echo "ğŸ” Simulating primary failure..."

                    // 1. ×¡×’×™×¨×ª PRIMARY (frontend:3000)
                    sh "pkill -f 'kubectl port-forward service/frontend 3000:80' || true"
                    sleep(5)

                    // 2. ×‘×“×™×§×ª DR
                    def status = sh(
                        script: "curl -s -o /dev/null -w '%{http_code}' http://localhost:3002",
                        returnStdout: true
                    ).trim()

                    if (status == "200") {
                        echo "âœ… DR Frontend is UP on port 3002"
                    } else {
                        error("âŒ DR Frontend is NOT available â€” HTTP ${status}")
                    }

                    // 3. ×©×™×—×–×•×¨ ×”×¡×‘×™×‘×” ×“×¨×š start-dev.sh
                    echo "ğŸ› ï¸ Restarting full dev environment..."
                    sh "bash dev/scripts/start-dev.sh"
                }
            }
        }
    }

    post {
        success {
            echo "âœ… Backend CI/CD succeeded."
            withCredentials([string(credentialsId: "${SLACK_CREDENTIAL_ID}", variable: 'SLACK_WEBHOOK')]) {
                sh """
                    curl -X POST -H 'Content-type: application/json' \
                    --data '{"text": "âœ… *Backend* CI/CD succeeded â€” *${TAG}* deployed & DR passed."}' $SLACK_WEBHOOK
                """
            }
        }

        aborted {
            echo "â¹ï¸ Pipeline aborted (no backend changes)"
            withCredentials([string(credentialsId: "${SLACK_CREDENTIAL_ID}", variable: 'SLACK_WEBHOOK')]) {
                sh """
                    curl -X POST -H 'Content-type: application/json' \
                    --data '{"text": "âš ï¸ *Backend* pipeline aborted â€” no changes detected."}' $SLACK_WEBHOOK
                """
            }
        }

        failure {
            echo "âŒ Pipeline failed"
            withCredentials([string(credentialsId: "${SLACK_CREDENTIAL_ID}", variable: 'SLACK_WEBHOOK')]) {
                sh """
                    curl -X POST -H 'Content-type: application/json' \
                    --data '{"text": "âŒ *Backend* pipeline failed. Check Jenkins logs."}' $SLACK_WEBHOOK
                """
            }
        }
    }
}
