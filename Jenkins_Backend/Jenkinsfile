pipeline {
  agent any

  environment {
    DOCKERHUB_CREDENTIALS = credentials('docker-hub-creds')
    DOCKERHUB_IMAGE = 'emadas/smart-retail-backend'
    K8S_DEPLOYMENT = 'backend-deployment'
    K8S_NAMESPACE = 'default'
    TAG = "v${env.BUILD_NUMBER}"
  }

  options {
    skipDefaultCheckout true
    buildDiscarder(logRotator(numToKeepStr: '10'))
  }

  stages {
    stage('üì• Checkout') {
      steps {
        checkout scm
      }
    }

    stage('üßπ Lint + ‚úÖ Test') {
      steps {
        echo "Running lint and test..."
        // Example: sh 'pytest tests/' or 'flake8 app.py'
      }
    }

    stage('üê≥ Build & Push Image') {
      steps {
        script {
          docker.withRegistry('', DOCKERHUB_CREDENTIALS) {
            def image = docker.build("${DOCKERHUB_IMAGE}:${TAG}")
            image.push()
          }
        }
      }
    }

    stage('‚úèÔ∏è Update K8s Deployment') {
      steps {
        sh "kubectl set image deployment/${K8S_DEPLOYMENT} backend=${DOCKERHUB_IMAGE}:${TAG} -n ${K8S_NAMESPACE}"
      }
    }

    stage('üöÄ Deploy to Kubernetes') {
      steps {
        sh "kubectl rollout restart deployment/${K8S_DEPLOYMENT} -n ${K8S_NAMESPACE}"
      }
    }

    stage('üîç Health Check') {
      steps {
        sh "kubectl rollout status deployment/${K8S_DEPLOYMENT} -n ${K8S_NAMESPACE}"
      }
    }
  }

  post {
    success {
      echo "‚úÖ Deployment succeeded for TAG ${TAG}"
    }
    failure {
      echo "‚ùå Deployment failed for TAG ${TAG}"
    }
  }
}
