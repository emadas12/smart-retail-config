pipeline {
  agent any

  environment {
    IMAGE_NAME = 'rani19/backend'
    TAG = "build-${env.BUILD_NUMBER}"
    DOCKER_CREDENTIALS_ID = 'docker-hub-creds'
    DEV_REPO_URL = 'https://github.com/RaniSaed/smart-retail-dev.git'
    CONFIG_REPO_URL = 'https://github.com/RaniSaed/smart-retail-config.git'
    PRIMARY_NS = 'default'
    KUBECONFIG = '/root/.kube/config'
  }

  options {
    skipStagesAfterUnstable()
    disableConcurrentBuilds()
  }

  stages {

    stage('ğŸ‘‹ Start Pipeline') {
      steps {
        echo "ğŸ”§ Starting Jenkins CI/CD pipeline for build #${env.BUILD_NUMBER}"
      }
    }

    stage('ğŸ“¥ Clone Repositories') {
      parallel {
        stage('ğŸ“¦ Clone Dev Repo') {
          steps {
            dir('dev') {
              git url: "${DEV_REPO_URL}", branch: 'main'
            }
          }
        }

        stage('ğŸ› ï¸ Clone Config Repo') {
          steps {
            dir('config') {
              git url: "${CONFIG_REPO_URL}", branch: 'main'
            }
          }
        }
      }
    }

    stage('ğŸ§¹ Lint Backend') {
      steps {
        dir('dev/backend') {
          sh '''
            echo "ğŸ” Running flake8..."
            pip install --break-system-packages flake8 > /dev/null || true
            flake8 . || true
          '''
        }
      }
    }

    stage('âœ… Unit Tests') {
      steps {
        dir('dev/backend') {
          sh '''
            echo "ğŸ§ª Installing dependencies and running unit tests..."
            pip install --break-system-packages -r requirements.txt > /dev/null || true
            python3 -m unittest discover -s tests || true
          '''
        }
      }
    }

    stage('ğŸ³ Build & Push Docker Image') {
      steps {
        dir('dev/backend') {
          withCredentials([usernamePassword(
            credentialsId: "${DOCKER_CREDENTIALS_ID}",
            usernameVariable: 'DOCKER_USER',
            passwordVariable: 'DOCKER_PASS'
          )]) {
            sh '''
              echo "ğŸ” Logging in to Docker Hub..."
              echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin

              echo "ğŸ› ï¸ Building image: $IMAGE_NAME:$TAG"
              docker build -t $IMAGE_NAME:$TAG .

              echo "ğŸ“¤ Pushing image to Docker Hub..."
              docker push $IMAGE_NAME:$TAG

              echo "âœ… Docker image pushed: $IMAGE_NAME:$TAG"
            '''
          }
        }
      }
    }
  }

  post {
    success {
      echo "ğŸ‰ Build #${env.BUILD_NUMBER} completed successfully and image was pushed!"
    }
    failure {
      echo "âŒ Build #${env.BUILD_NUMBER} failed. Check logs for details."
    }
    always {
      echo "ğŸ“¦ Pipeline finished with status: ${currentBuild.currentResult}"
    }
  }
}
