pipeline {
  agent any

  environment {
    IMAGE_NAME = 'rani19/backend'
    TAG = "build-${env.BUILD_NUMBER}"
    DOCKER_CREDENTIALS_ID = 'docker-hub-creds'
    DEV_REPO_URL = 'https://github.com/RaniSaed/smart-retail-dev.git'
    CONFIG_REPO_URL = 'https://github.com/RaniSaed/smart-retail-config.git'
    PRIMARY_NS = 'default'
    KUBECONFIG = '/root/.kube/config'
  }

  options {
    buildDiscarder(logRotator(numToKeepStr: '10')) // ×©××•×¨ ×¨×§ 10 ×¨×™×¦×•×ª ××—×¨×•× ×•×ª
    skipDefaultCheckout()
    timeout(time: 30, unit: 'MINUTES') // ××§×¡×™××•× ×–××Ÿ ×œ×”×¨×¦×”
  }

  stages {

    stage('ğŸ‘‹ Start') {
      steps {
        echo "ğŸš€ Pipeline started for Docker image: ${IMAGE_NAME}:${TAG}"
      }
    }

    stage('ğŸ“¥ Clone Dev Repo') {
      steps {
        dir('dev') {
          git url: "${DEV_REPO_URL}", branch: 'main'
        }
      }
    }

    stage('ğŸ“¥ Clone Config Repo') {
      steps {
        dir('config') {
          git url: "${CONFIG_REPO_URL}", branch: 'main'
        }
      }
    }

    stage('ğŸ Lint Flask Backend') {
      steps {
        dir('dev/backend') {
          sh '''
            echo "ğŸ” Installing flake8 and linting code..."
            pip install --break-system-packages flake8 > /dev/null || true
            flake8 . || true
          '''
        }
      }
    }

    stage('ğŸ§ª Run Flask Tests') {
      steps {
        dir('dev/backend') {
          sh '''
            echo "ğŸ§ª Installing requirements and running unit tests..."
            pip install --break-system-packages -r requirements.txt > /dev/null || true
            python3 -m unittest discover -s tests || true
          '''
        }
      }
    }

    stage('ğŸ³ Build & Push Docker Image') {
      steps {
        dir('dev/backend') {
          withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS_ID}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
            sh '''
              echo "ğŸ³ Logging in to Docker Hub..."
              echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin

              echo "ğŸ“¦ Building Docker image..."
              docker build -t $IMAGE_NAME:$TAG .

              echo "ğŸš€ Pushing Docker image..."
              docker push $IMAGE_NAME:$TAG
            '''
          }
        }
      }
    }
  }

  post {
    success {
      echo 'âœ… Pipeline completed successfully!'
    }
    failure {
      echo 'âŒ Pipeline failed. Check logs for errors.'
    }
  }
}
