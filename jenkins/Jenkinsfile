pipeline {
  agent any

  environment {
    DEV_REPO_URL = 'https://github.com/RaniSaed/smart-retail-dev.git'
  }

  stages {
    stage('ğŸ– Echo Hello') {
      steps {
        echo 'ğŸ‘‹ Hello from Jenkins!'
      }
    }

    stage('ğŸ“¥ Clone Dev Repo') {
      steps {
        dir('dev') {
          git url: "${DEV_REPO_URL}", branch: 'main'
        }
      }
    }

    stage('ğŸ“‚ List Files') {
      steps {
        dir('dev') {
          sh 'ls -la'
        }
      }
    }
  }

  post {
    success {
      echo 'âœ… Pipeline ran successfully!'
    }
    failure {
      echo 'âŒ Pipeline failed!'
    }
  }
}
